<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DAY/LIGHT THEME -->
    <style name="dayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="background_color">#fcfcfc</item>
        <item name="edit_text_color">#E6E5E5</item>
        <item name="text_color">#494949</item>
        <item name="button_color">@color/purple_700</item>
        <!-- Status bar color. -->
    </style>

    <!-- NIGHT/DARK THEME -->
    <style name="nightTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="background_color">#000000</item>
        <item name="edit_text_color">#E6E5E5</item>
        <item name="text_color">#8F8F8F</item>
        <item name="button_color">@color/teal_700</item>
    </style>

</resources>